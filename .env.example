# ==============================================
# APPLICATION
# ==============================================
NODE_ENV=development
APP_NAME=SKiss
APP_URL=http://localhost:3000
APP_PORT=3000
APP_TIMEZONE=UTC

# ==============================================
# FRONTEND
# ==============================================
VITE_API_URL=http://localhost:3000/api
VITE_APP_NAME=SKiss
VITE_PORT=5173

# ==============================================
# DATABASE (PostgreSQL)
# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=skiss
DB_USERNAME=skiss_user
DB_PASSWORD=your_secure_password_here
DB_SYNC=false
DB_LOGGING=true

# ==============================================
# REDIS
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# JWT AUTHENTICATION
# ==============================================
JWT_SECRET=your_jwt_secret_key_min_32_chars_long_here
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your_refresh_token_secret_key_here
JWT_REFRESH_EXPIRES_IN=7d

# ==============================================
# TWO FACTOR AUTHENTICATION
# ==============================================
TWO_FACTOR_ISSUER=SKiss
TWO_FACTOR_APP_NAME=SKiss

# ==============================================
# EMAIL / SMTP
# ==============================================
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM=noreply@skiss.local
MAIL_FROM_NAME=SKiss

# ==============================================
# TELEGRAM BOT
# ==============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_ADMIN_CHAT_ID=your_admin_chat_id

# ==============================================
# CRYPTOCURRENCY (BITCOIN)
# ==============================================
BTC_NETWORK=testnet
BTC_API_PROVIDER=blockchair
BTC_API_KEY=your_blockchain_api_key
BTC_MASTER_WALLET=your_master_wallet_address
BTC_MASTER_PRIVATE_KEY=your_master_private_key

# ==============================================
# PAYMENT SETTINGS
# ==============================================
COMMISSION_BTC_PERCENT=10
COMMISSION_BANK_PERCENT=25
MIN_WITHDRAWAL_BTC=0.001
MAX_WITHDRAWAL_BTC=10
AUTO_WITHDRAWAL_LIMIT_BTC=1

# ==============================================
# DOMAIN REGISTRARS
# ==============================================
NAMECHEAP_API_KEY=
NAMECHEAP_USERNAME=
NAMECHEAP_API_USER=

# ==============================================
# CLOUDFLARE
# ==============================================
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_EMAIL=

# ==============================================
# SECURITY
# ==============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_ATTEMPTS_LIMIT=5
LOGIN_TIMEOUT_MINUTES=15
BCRYPT_ROUNDS=10

# ==============================================
# SESSION
# ==============================================
SESSION_SECRET=your_session_secret_key_here
SESSION_MAX_AGE=86400000

# ==============================================
# FILE UPLOAD
# ==============================================
MAX_FILE_SIZE=5242880
UPLOAD_DESTINATION=./uploads

# ==============================================
# MONITORING & LOGGING
# ==============================================
LOG_LEVEL=debug
SENTRY_DSN=
PROMETHEUS_PORT=9090
GRAFANA_URL=

# ==============================================
# CORS
# ==============================================
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true
